{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "strict": true,
    "outDir": "dist",
    "moduleDetection": "force",
    "baseUrl": "src",
    "paths": {
      "@/*": ["/*"],
      "@assets/*": ["assets/*"],
      "@styles": ["styles/*"],
      "@components/*": ["components/*"],
      "@layouts/*": ["layouts/*"],
      "@pages/*": ["pages/*"],
      "@Explore/*": ["Explore/*"],
      "@Gacha/*": ["Gacha/*"],
      "@Main/*": ["Main/*"],
      "@User/*": ["User/*"]
    },
    "composite": true,
    "lib": ["dom", "ESNext"],
    "allowJs": true,
    "checkJs": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react",
    "forceConsistentCasingInFileNames": true,
    "typeRoots": ["@types"],
    "allowImportingTsExtensions": true
  },
  "include": ["src", "global.d.ts"]
}
